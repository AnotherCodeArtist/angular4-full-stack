{
  "name": "angular4-full-stack-refined",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Peter Salhofer",
  "description": "Angular Full Stack project built using Angular 4, Express, Mongoose and Node (based on Davide Violante's template)",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "start": "node dist/server/server.js",
    "predev": "tsc -p server",
    "dev": "concurrently  \"ng serve -pc proxy.conf.json --open\" \"tsc -w -p server\" \"nodemon dist/server/server.js\"",
    "prod": "concurrently \"ng build -aot -prod && tsc -p server && node dist/server/server.js\"",
    "test": "jest --watch --config=jest.config.json",
    "coverage": "jest --coverage --config=jest.config.json",
    "lint": "ng lint",
    "lintbe": "tslint server/**/**.ts{,x}",
    "e2e": "ng e2e",
    "test-srv": "jest --runInBand --watch",
    "coverage-srv": "jest --runInBand --coverage",
    "compile-tests": "tsc -w -p test"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@types/mongoose": "^4.7.20",
    "@types/passport-jwt": "^2.0.22",
    "@types/socket.io": "^1.4.29",
    "@types/socket.io-client": "^1.4.29",
    "angular2-jwt": "^0.2.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "bootstrap": "4.0.0-alpha.5",
    "core-js": "^2.4.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^7.4.1",
    "mongoose": "^4.11.6",
    "mongoose-type-email": "^1.0.5",
    "morgan": "^1.8.2",
    "passport": "^0.3.2",
    "passport-github": "^1.1.0",
    "passport-jwt": "^2.2.1",
    "rxjs": "^5.1.0",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "tether": "1.4.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.1.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/language-service": "^4.0.0",
    "@types/bluebird": "^3.5.8",
    "@types/jest": "^19.2.4",
    "@types/node": "~6.0.60",
    "@types/supertest": "^2.0.2",
    "bluebird": "^3.5.0",
    "codelyzer": "~3.0.1",
    "concurrently": "^3.3.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "jest": "^21.1.0",
    "jest-cli": "^21.2.1",
    "jest-preset-angular": "^2.0.5",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "1.11.0",
    "protractor": "~5.1.2",
    "supertest": "^3.0.0",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "(test/.*\\.(test|spec))\\.(tsx?|jsx?)$",
    "roots": [
      "test",
      "server"
    ]
  },
  "main": "dist/server/server.js"
}
