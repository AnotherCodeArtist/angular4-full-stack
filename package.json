    "@angular/compiler-cli": "~8.1.3",
    "@angular/language-service": "~8.1.3",
    "@types/bluebird": "^3.5.23",
    "@types/jest": "^24.0.16",
    "@types/node": "~12.0.12",
    "@types/supertest": "^2.0.6",
    "bluebird": "^3.5.1",
    "codelyzer": "~5.1.0",
