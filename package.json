{
  "name": "angular6-full-stack-refined",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Peter Salhofer",
  "description": "Angular Full Stack project built using Angular 6, Express, Mongoose and Node (based on Davide Violante's template)",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "start": "node dist/server/server.js",
    "predev": "tsc -p server",
    "dev": "concurrently  \"ng serve --proxy-config proxy.conf.json --open\" \"tsc -w -p server\" \"nodemon dist/server/server.js\"",
    "prod": "concurrently \"ng build -aot -prod && tsc -p server && node dist/server/server.js\"",
    "test": "ng test --watch",
    "coverage": "jest --coverage --config jest.config.json",
    "lint": "ng lint",
    "lintbe": "tslint server/**/**.ts{,x}",
    "e2e": "ng e2e",
    "test-srv": "jest --runInBand --watch --config=jest.server.config.json",
    "coverage-srv": "jest --runInBand --coverage --config=jest.server.config.json",
    "compile-tests": "tsc -w -p test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.1.3",
    "@angular/common": "~8.1.3",
    "@angular/compiler": "~8.1.3",
    "@angular/core": "~8.1.3",
    "@angular/forms": "~8.1.3",
    "@angular/platform-browser": "~8.1.3",
    "@angular/platform-browser-dynamic": "~8.1.3",
    "@angular/router": "~8.1.3",
    "@auth0/angular-jwt": "2.1.1",
    "@types/mongoose": "^5.2.6",
    "@types/passport-jwt": "^3.0.1",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "babel-jest": "^24.8.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "bootstrap": "4.3.1",
    "core-js": "^2.6.9",
    "dotenv": "^8.0.0",
    "express": "^4.16.3",
    "font-awesome": "^4.7.0",
    "jquery": "^3.4.1",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.6.7",
    "mongoose-type-email": "^1.0.9",
    "morgan": "^1.9.1",
    "npm-check-updates": "^3.1.13",
    "passport": "^0.4.0",
