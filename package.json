{
  "name": "angular6-full-stack-refined",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Peter Salhofer",
  "description": "Angular Full Stack project built using Angular 6, Express, Mongoose and Node (based on Davide Violante's template)",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "start": "node dist/server/server.js",
    "predev": "tsc -p server",
    "dev": "concurrently  \"ng serve --proxy-config proxy.conf.json --open\" \"tsc -w -p server\" \"nodemon dist/server/server.js\"",
    "prod": "concurrently \"ng build -aot -prod && tsc -p server && node dist/server/server.js\"",
    "test": "jest --watch --config=jest.config.json",
    "coverage": "jest --coverage --config=jest.config.json",
    "lint": "ng lint",
    "lintbe": "tslint server/**/**.ts{,x}",
    "e2e": "ng e2e",
    "test-srv": "jest --runInBand --watch",
    "coverage-srv": "jest --runInBand --coverage",
    "compile-tests": "tsc -w -p test"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^6.1.3",
    "@angular/compiler": "^6.1.3",
    "@angular/core": "^6.1.3",
    "@angular/forms": "^6.1.3",
    "@angular/http": "^6.1.3",
    "@angular/platform-browser": "^6.1.3",
    "@angular/platform-browser-dynamic": "^6.1.3",
    "@angular/router": "^6.1.3",
    "@auth0/angular-jwt": "2.0.0",
    "@types/mongoose": "^5.2.6",
    "@types/passport-jwt": "^3.0.1",
    "@types/socket.io": "^1.4.37",
    "@types/socket.io-client": "^1.4.32",
    "babel-jest": "^23.4.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "bootstrap": "4.1.3",
    "core-js": "^2.5.7",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "font-awesome": "^4.7.0",
    "jest": "^23.5.0",
    "jquery": "^3.3.1",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.9",
    "mongoose-type-email": "^1.0.9",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "passport-jwt": "^4.0.0",
    "rxjs": "^6.2.2npm",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "tether": "1.4.4",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.4",
    "@angular/cli": "6.1.4",
    "@angular/compiler-cli": "^6.1.3",
    "@angular/language-service": "^6.1.3",
    "@types/bluebird": "^3.5.23",
    "@types/jest": "^23.3.1",
    "@types/node": "~10.7.1",
    "@types/supertest": "^2.0.6",
    "bluebird": "^3.5.1",
    "codelyzer": "~4.4.4",
    "concurrently": "^3.6.1",
    "jasmine-core": "~3.2.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest-cli": "^23.5.0",
    "jest-preset-angular": "^6.0.0",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^1.3.1",
    "nodemon": "1.18.3",
    "protractor": "~5.4.0",
    "supertest": "^3.3.0",
    "ts-jest": "^23.1.4",
    "ts-node": "~7.0.1",
    "tslint": "~5.11.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(test/.*\\.(test|spec))\\.(tsx?|jsx?)$",
    "roots": [
      "test",
      "server"
    ]
  },
  "main": "dist/server/server.js"
}
